<%= form_for @route do |f| %>

<% if @route.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>
  <ul>
    <% @route.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :name %>: <%= f.text_field :name %>
</p>
<%= f.fields_for :points do |builder| %>
  <%= builder.label :lat, "Latitude" %>: <%= builder.text_field :lat  %><br />
  <%= builder.label :long, "Longitude" %>: <%= builder.text_field :long  %><br />
  <%#= render "point_fields", :f => builder %>
<% end %>

<p><%= f.submit "Submit" %></p>

<% end %>
