<%= form_for @route do |f| %>

<% if @route.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>
  <ul>
    <% @route.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p class="fields">
  <%= f.label :name %>: <%= f.text_field :name %>
</p>
<%= f.fields_for :points do |builder| %>
 <%= render "point_fields", :f => builder %>
<% end %>

<p><%= link_to_add_fields "Add Point", f, :points %></p>

<p><%= f.submit "Submit" %></p>

<% end %>
